{
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "es2018",
            "dom",
            "esnext.asynciterable"
        ]
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*.ts",
        "./types/**/*.d.ts"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ]
}
