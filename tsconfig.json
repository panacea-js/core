{
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "es2018",
            "dom",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*.ts",
        "./types/**/*.d.ts"
    ],
    "exclude": [
        "*.test.ts",
        "src/**/test"
    ]
}
