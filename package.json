{
  "name": "@panaceajs/core",
  "version": "0.0.0",
  "description": "Panacea Core",
  "repository": "panacea-js/core",
  "author": "Barry Fisher <hello@reallifedigital.com> (https://www.reallifedigital.com)",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "flow": "flow",
    "start:test-db": "mongod --directoryperdb --dbpath=src/test/data/db --port=27018 --logappend --logRotate=rename --logpath=src/test/data/db_log/mongod.log &",
    "stop:test-db": "mongod --directoryperdb --dbpath=src/test/data/db --shutdown && rm -Rf src/test/data/db/*",
    "test": "npm run start:test-db && snyk test && ava && npm run stop:test-db",
    "test:no-snyk": "npm run start:test-db && ava && npm run stop:test-db",
    "watch:test": "npm run start:test-db && ava -w",
    "cover": "nyc npm run test",
    "cover:no-snyk": "nyc npm run test:no-snyk",
    "watch:cover": "nodemon --exec npm run cover -s",
    "watch:cover:no-snyk": "nodemon --exec npm run cover:no-snyk",
    "codecov-report": "nyc npm test && nyc report --reporter=text-lcov | codecov",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix | snazzy",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "Panacea",
      "Panacea_Testing"
    ],
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "flow",
      "flow-typed"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "exclude": [
      "src/test",
      "**/*.test.js"
    ],
    "lines": 10,
    "statements": 10,
    "functions": 10,
    "branches": 10
  },
  "ava": {
    "files": [
      "**/*.test.js"
    ],
    "require": [
      "babel-register",
      "./dist/test/setup-test-env.js"
    ],
    "babel": "inherit",
    "failWithoutAssertions": false
  },
  "devDependencies": {
    "@types/core-js": "^2.5.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.0.2",
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.117",
    "@types/mongoose": "^5.2.19",
    "@types/node-fetch": "^2.1.2",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-register": "^6.26.0",
    "codecov": "^3.0.4",
    "cross-env": "^5.1.1",
    "escope": "^3.6.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.12.0",
    "flow-bin": "^0.77.0",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.18.3",
    "nyc": "^13.0.0",
    "portfinder": "^1.0.15",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "accepts": "^1.3.5",
    "apollo-server-express": "^1.0.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.17.2",
    "bottlejs": "^1.6.1",
    "chalk": "^2.3.0",
    "cors": "^2.8.4",
    "dotenv-safe": "^4.0.4",
    "express": "^4.15.3",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.1",
    "graphql-voyager": "^1.0.0-rc.15",
    "js-yaml": "github:nodeca/js-yaml",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "moment": "^2.20.1",
    "mongoose": "^5.2.7",
    "rimraf": "^2.6.2",
    "rsync": "^0.6.1",
    "snazzy": "^7.1.1",
    "snyk": "^1.89.0",
    "vue": "^2.5.15",
    "vue-i18n": "^7.4.2",
    "winston": "^3.0.0-rc1"
  },
  "snyk": true
}
